pipeline {

	agent none	
	
	stages {
	
	stage('Build c') {
	
		agent { label 'slave1' }
		steps {
		     
			 echo 'Building c-project'

				sh '''
						set +x
						
							if [[ -d "deployment_test" ]]; then
								cd deployment_test && git pull 
								make
							else
							git clone  https://github.com/rakesh7777777/deployment_test.git
								cd deployment_test
								make
							fi
							
							if [[ -x "./ABC.exe" ]]; then
								echo "c-project Build Successful...!"
							else
								echo "Build Failed ::: No executable file generated..!"
							fi
						
							sleep 10
					'''
		}
	}
	stage('Build JAVA'){
	
		agent { label 'slave2' }

		steps {
		     
			 echo 'Building JAVA project...'

				sh '''
						set +x
						
							if [[ -d "java-new" ]]; then
								cd java-new && git pull 
								mvn clean install
							else
							git clone  https://github.com/rakesh7777777/java-new.git
								cd java-new
								mvn install
								echo "Build Successful...!!!"
								sleep 2
								echo $PWD
								echo "copying jar file to artifactory repo....!"
								cp /home/ec2-user/slave2/workspace/pipeline_test/java-new/target/my-app-1.0-SNAPSHOT.jar /home/ec2-user/deployed_items
								echo "Deployed Successful"
							fi
							
							
					'''
		}
	}

}

}